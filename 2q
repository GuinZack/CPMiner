DIR := ${CURDIR}
build:
	gradle build
	unzip $(CURDIR)/app/build/distributions/app.zip -d run                                                                                                                  
  
unzip: 
	rm -rf run
	unzip $(CURDIR)/app/build/distributions/app.zip
  
run:
	./$(CURDIR)/app/bin/app $(args) 
  
clean:
	rm -rf run
	rm -rf build
